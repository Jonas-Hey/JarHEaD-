<fieldset class="query-template-arguments">
<legend>Arguments</legend>
{{#widget: ActionableResult | 
 noDataMessage = 'No constraints defined.'
 | columnConfiguration = {{ 
      {{ variableName = 'variable'
       | displayName = 'Variable'
      }} | 
      {{ variableName = 'datatype'
       | displayName = 'Type of Variable'
      }} | 
      {{ variableName = 'optional'
       | displayName = 'Optional'
      }} | 
      {{ variableName = 'displayOrder'
       | displayName = 'Display order'
      }} | 
      {{ variableName = 'arg'
       | visibility = 'HIDDEN'
      }} }}
 | rowActions = {{ 
      {{ confirm = 'Are you sure that you want to remove this argument?'
       | args = {{ '?:arg' }}
       | method = 'deleteSpinTemplateArgument'
       | passContext = true
       | label = 'Delete'
       | onFinish = 'reload'
       | clazz = 'com.fluidops.iwb.query.catalog.QueryCatalog'
       | render = 'img:/ajax/icons/delete.png'
      }} }}
 | query = 'SELECT (REPLACE(STR(?predicate), "^.*(#{{Pipe}}/)", "") AS ?variable) ?datatype ?optional ?displayOrder ?arg
WHERE {
  ?? <http://spinrdf.org/spin#constraint> ?arg .
  ?arg <http://spinrdf.org/spl#predicate> ?predicate ;  
  <http://spinrdf.org/spl#valueType> ?datatype ;
  <http://spinrdf.org/spl#optional> ?optional .

  OPTIONAL {
    ?arg <http://www.fluidops.com/ontologies/spin/displayOrder> ?displayOrder .
  }
}'
 | hideTableIfEmpty = false
 | labels = true
}}

{{#widget: CodeExecution | 
 method = 'showArgumentCreationContainer'
 | passContext = true
 | label = 'Add Template Argument'
 | onFinish = 'none'
 | render = 'btn'
 | clazz = 'com.fluidops.iwb.query.catalog.QueryCatalog'
}}
</fieldset>
