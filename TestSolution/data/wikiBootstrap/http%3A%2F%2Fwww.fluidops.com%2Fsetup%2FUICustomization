			<td>
				{{#widget: PieChart | 
				input = 'category'
				| output = {{ 'value' }}
				| query = 'SELECT ?category ?value WHERE { 
							VALUES (?category ?value)
							{ 
								("Color1" 85)
								("Color2" 60)
								("Color3" 123)
								("Color4" 13)
								("Color5" 85)
								("Color6" 60)
								("Color7" 123)
								("Color8" 13)
					} }'
				| settings = 'Settings:pietile1x1'
				| customMappings = 'position={{{legendPosition|right}}}'
				| styling = 
					{{ width = '400'
					| height = '300'
					}}
				}}
			</td>
		</tr>
	</table>
</div>
