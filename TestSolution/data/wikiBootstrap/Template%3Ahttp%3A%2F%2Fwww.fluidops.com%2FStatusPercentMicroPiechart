<!-- Requiered parameter: percent number (1 - 100) to show -->
<div style="color:#5F5F5F;">
<div style="vertical-align: middle; display: inline-block; width: 22px; height: 20px;">
{{#widget: PieChart | 
 input = 'label'
 | query = 'select ?label ?value 
where{ {BIND( {{{percent|0}}} as ?value ) BIND( "used" as ?label) } UNION {BIND(100 - {{{percent|0}}} as ?value) BIND( "free" as ?label )  } }'
 | colors = {{ "#777777", "#DADADA" }}
 | settings = 'Settings:piechart.micro.capacity'
 | output = {{ 'value' }}
 | styling = 
   {{ height = '20'
    | width = '22'
   }}
}}
</div>
<div style="vertical-align: middle;display: inline-block;height: 14px;">{{{percent|0}}}% </div>
<div style="clear:both;" />
</div>	