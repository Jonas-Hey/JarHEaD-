===== Horizontal Bars =====
<source>
{{#widget: BarChart | 
 input = 'Org'
 | query = '
    SELECT ?Org ?projects WHERE { 
        VALUES (?Org ?projects)
        { 
          ("Org 1" 23)
          ("Org 2" 56)
          ("Org 3" 33)
          ("Org 4" 87)
          ("Org 5" 20)
          ("Org 6" 15)
   } }'
 | colors = {{ '#8CBACE' }}
 | output = {{ 'projects' }}
 | styling = 
   {{ height = '200'
    | width = '400'
   }}
 | barType = 'bar'
}}
</source>
{{#widget: BarChart | 
 input = 'Org'
 | query = '
    SELECT ?Org ?projects WHERE { 
        VALUES (?Org ?projects)
        { 
          ("Org 1" 23)
