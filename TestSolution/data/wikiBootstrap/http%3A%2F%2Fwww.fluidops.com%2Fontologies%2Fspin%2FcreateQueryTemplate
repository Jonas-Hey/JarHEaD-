''Please provide a label for the query and choose in the query source whether you want to reference an existing base query or create a new one (inline):''
{{#widget: TripleEditor | 
 width = '600'
 | startInEditMode = true
 | editMode = 'COMBINED'
 | propertyConfiguration = {{ 
      {{ minCardinality = 1
       | showAlways = true
       | property = 'http://spinrdf.org/spin#labelTemplate'
       | datatype = 'xsd:string'
       | displayName = 'Query Label'
       | enforceConstraints = false
       | maxCardinality = 1
      }} | 
      {{ minCardinality = 1
       | values = {{ '"Inline"^^xsd:string' | '"FromBaseQuery"^^xsd:string' }}
       | showAlways = true
       | property = 'http://www.fluidops.com/ontologies/spin/useQueryTemplate'
       | datatype = 'xsd:string'
       | displayName = 'Query Source'
       | enforceConstraints = false
       | componentType = 'DROPDOWN'
       | maxCardinality = 1
      }} }}
 | showInverseProperties = false
 | addNewProperties = false
}}
