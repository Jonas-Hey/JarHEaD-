== Mappings ==

This data source is applied in the following mappings:

{{#widget: ActionableResult | 
 columnConfiguration = {{ 
      {{ variableName = 'collection'
       | columnWidth = 50
       | displayName = 'Collection'
      }} | 
      {{ variableName = 'cnt'
       | columnWidth = 20
       | displayName = '#Mapping Rules'
      }} }}
 | query = 'SELECT ?collection ?cnt WHERE {
   {
      SELECT ?collection (COUNT(?tm) AS ?cnt) WHERE {
        ?collection <http://www.fluidops.com/ontologies/r2rmlExtension/dataSource> ??.
        ?collection a <http://www.fluidops.com/ontologies/r2rmlExtension/TriplesMapCollection>.
        OPTIONAL { ?collection <http://www.fluidops.com/ontologies/r2rmlExtension/containsTriplesMap> ?tm }
      } GROUP BY ?collection
   }
   FILTER BOUND(?collection) 
  } '
 | rowActions = {{ 
      {{ passContext = true
       | args = {{ $this$ | '?:collection' }}
       | label = 'Create provider with this mapping'
       | method = 'createProvider'
       | clazz = 'com.fluidops.iwb.datasource.ui.DataSourceExecution'
       | render = 'img:/ajax/icons/add.png'
      }} |
      {{ passContext = true
       | userInput = {{ 
            {{ name = 'newName'
             | displayName = 'New Name'
             | componentType = 'SIMPLE'
            }} }}
       | args = {{'?:collection' | '%newName' }}
       | method = 'renameTriplesMapCollection'
       | label = 'Rename'
       | clazz = 'com.fluidops.iwb.r2rml.utils.R2RMLExecution'
       | render = 'img:/ajax/icons/edit.png'
      }}|
      {{ passContext = false
       | onFinish = 'reload'
       | args = {{ '?:collection' }}
       | label = 'Delete Collection'
       | method = 'deleteMappingCollection'
       | clazz = 'com.fluidops.iwb.r2rml.utils.R2RMLExecution'
       | confirm = 'You are about to fully delete the mapping collection including all of its mapping rules and associated data. Any providers still using the mapping would cease to function.'
       | render = 'img:/ajax/icons/delete.png'
      }} }}
 | noDataMessage = 'No mapping available'
}}
