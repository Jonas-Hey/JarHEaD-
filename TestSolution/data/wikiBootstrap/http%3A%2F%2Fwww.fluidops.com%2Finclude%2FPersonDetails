| 
{{#widget: QueryResult | 
 query = 'select DISTINCT (COALESCE (?ldapSam, ?sam, ?loginName, ?userName) as ?value) where {
   OPTIONAL { ?? ldap:sAMAccountName ?ldapSam . }
   OPTIONAL { ?? :sAMAccountName ?sam . }
   OPTIONAL { ?? fluidops:loginName ?loginName . }
   OPTIONAL { ?? fluidops:userName ?userName . }
}'
 | hideIfEmpty = true
}}

